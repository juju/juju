#!/bin/bash

export PATH=$PWD/plugin:$PATH
unitstatus=$(status-get)

name=$(action-get name)
id=$(action-get id)
status=$(action-get status)
status-set $unitstatus "plugin-prep: initializing plugin ($name, $id, $status)"

result=$(juju-process-myplugin init "$name" "$id" "$status")
rc=$?
if [ "$rc" != "0" ]; then
    status-set $unitstatus "plugin-prep: [$name, $id, $status] failed ($rc - $result)"
fi
